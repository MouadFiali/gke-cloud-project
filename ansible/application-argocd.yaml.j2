apiVersion: argoproj.io/v1alpha1
kind: Application
metadata:
  name: online-boutique
  namespace: argocd
  finalizers:
    - resources-finalizer.argocd.argoproj.io
spec:
  destination:
    namespace: {{ app_namespace }}
    server: https://kubernetes.default.svc
  source:
    repoURL: https://gitlab.com/Hamdane10/gke-cloud-project.git
    targetRevision: HEAD
    path: helm-chart
    helm:
      skipCrds: false
      valuesObject:
        networkPolicies:
          create: true
        sidecars:
          create: true
        serviceAccounts:
          create: true
        opentelemetryCollector:
          create: {{ (tracing | bool or logging | bool) | string | lower }}
          tracing:
            enabled: {{ tracing | string | lower }}
          logging:
            enabled: {{ logging | string | lower }}
        googleCloudOperations:
          tracing: {{ tracing | string | lower }}
        frontend:
          externalService: false
          virtualService:
            create: true
            gateway:
              name: asm-ingressgateway
              namespace: asm-ingress
              labelKey: asm
              labelValue: ingressgateway
        loadGenerator:
          create: false
  project: default
  syncPolicy:
    automated:
      prune: true
      selfHeal: true
    syncOptions:
      - ApplyOutOfSyncOnly=true
      - ServerSideApply=true
      - CreateNamespace=true